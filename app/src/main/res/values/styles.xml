<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCardCornersEvaluation" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceCustomCorners</item>
    </style>

    <style name="ShapeAppearanceCustomCorners" parent="">
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomCardCornersPoster" parent="">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="gistTitle">
        <item name="android:text">@string/movieTitle</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gistTitle2">
        <item name="android:text">@string/movieTitle</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">#691C98</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="details">
        <item name="android:layout_marginTop">@dimen/small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="CustomTabTextLayout" parent="Theme.GistsApp">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/mediumSp</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="customBackTextButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>


</resources>